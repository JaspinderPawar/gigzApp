    "version": "0.2.0",
    "configurations": [
       {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "port": 5858,
            "url": "http://localhost:5000",
            "webRoot": "${workspaceRoot}/app/main.ts",
            "sourceMaps": true
        },
        {
            "name": "Launch index.html (without sourcemaps)",
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "file": "${workspaceRoot}/index.html"
        }
    ]
}