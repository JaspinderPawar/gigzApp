<input type="hidden" id="userId"/>
<div id="account-form-container" class="center-vertical">
  <form method="post" id="account-form" class="form-horizontal well">
    <h2></h2>
    <h6 id="sub1">Please tell us a little about yourself.</h6>
    <hr/>
    <div class="form-group">
      <label class="control-label col-sm-3">Name</label>
      <div class="col-sm-9">
        <input id="name-tf" type="text" name="name" class="form-control"/>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-3">Email</label>
      <div class="col-sm-9">
        <input id="email-tf" type="text" name="email" class="form-control"/>
      </div>
    </div>
    <hr/>
    <h6 id="sub2"></h6>
    <div class="form-group">
      <label class="control-label col-sm-3">Username</label>
      <div class="col-sm-9">
        <input id="user-tf" type="text" name="user" class="form-control disabled"/>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-3">Password</label>
      <div class="col-sm-9">
        <input id="pass-tf" type="password" name="pass" value="" class="form-control"/>
      </div>
    </div>
    <hr/>
    <div class="form-buttons">
      <button type="button" id="account-form-btn1" class="btn btn-default">Cancel</button>
      <button type="submit" id="account-form-btn2" class="btn btn-primary">Create Account</button>
    </div>
    <div class="clearfix"></div>
  </form>
</div>